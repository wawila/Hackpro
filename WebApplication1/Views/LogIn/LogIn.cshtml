@model WebApplication1.Models.UserModel
@{
    Layout = null;
    ViewBag.Title = "#HackPro";
}
<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6 lt8"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7 lt8"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8 lt8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html lang="en" class="no-js">
 <!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <title>#HackPro Log In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link href="~/Content/TLogIn2/LoginRegistrationForm/css/style.css" rel="stylesheet" />
    <link href="~/Content/TLogIn2/LoginRegistrationForm/css/animate-custom.css" rel="stylesheet" />
    <link href="~/Content/TLogIn2/LoginRegistrationForm/css/demo.css" rel="stylesheet" />
    <link rel="shortcut icon" href="../favicon.ico">
</head>
<body>
    <div class="container">
        <!-- Codrops top bar -->
        <div class="codrops-top">
            <span class="right">
                <a href=" http://www.unitec.edu">
                    <strong>UNITEC</strong>
                </a>
            </span>
            <div class="clr"></div>
        </div><!--/ Codrops top bar -->
        <header>
            <h1><span>#HackPro </span>Iniciar Sesion/Registrar</h1>
        </header>
        <section>
            <div id="container_demo">
                <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">
                        <form action="LogIn" method="post" autocomplete="on">
                            <h1>Iniciar Sesion</h1>
                            <p>
                                <label class="uname" data-icon="u"> Usuario/Correo </label>
                                <input id="username" name="User" required="required" type="text" placeholder="Correo" />
                            </p>
                            <p>
                                <label class="youpasswd" data-icon="p"> Contraseña </label>
                                <input id="password" name="Password" required="required" type="password" placeholder="Contraseña" />
                            </p>
                            <p class="keeplogin">
                                <input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" />
                                <label for="loginkeeping">Mantenerme Conectado:</label>
                            </p>
                            <p class="login button">
                                <input type="submit" value="Iniciar Sesion" />
                            </p>
                            <p class="change_link">
                                No eres miembro ?
                                <a href="#toregister" class="to_register"> Registrate Aqui! </a>
                            </p>
                        </form>
                    </div>

                    <div id="register" class="animate form">
                        <form action="LogIn" method="post" autocomplete="on">
                            <h1>Registrate</h1>
                            <p>
                                <label class="uname" data-icon="u">Nombre: </label>
                                <input id="usernamesignup" name="Nombre" required="required" type="text" placeholder="Nombre" />
                            </p>
                            <p>
                                <label class="uname" data-icon="u">Apellido: </label>
                                <input id="usernamesignup" name="Apellido" required="required" type="text" placeholder="Apellido" />
                            </p>
                            <p>
                                <label class="uname" data-icon="u">Usuario: </label>
                                <input id="usernamesignup" name="User" required="required" type="text" placeholder="Usuario" />
                            </p>
                            <p>
                                <label class="uname" data-icon="u">Celular: </label>
                                <input id="usernamesignup" name="Celular" required="required" type="number" placeholder="99999999" />
                            </p>
                            <p>
                                <label class="uname" data-icon="u">Genero: </label>
                                <input id="usernamesignup" name="Genero" required="required" type="text" placeholder="M/F" />
                            </p>
                            <p>
                                <label class="youmail" data-icon="e">Correo</label>
                                <input id="emailsignup" name="Correo" required="required" type="email" placeholder="Correo" />
                            </p>
                            <p>
                                <label class="youpasswd" data-icon="p">Contraseña</label>
                                <input id="passwordsignup" name="Password" required="required" type="password" placeholder="Contraseña" />
                            </p>
                            <p>
                                <label class="youpasswd" data-icon="p">Confirmar Contraseña</label>
                                <input id="passwordsignup_confirm" name="Password" required="required" type="password" placeholder="Contraseña" />
                            </p>
                            <p class="signin button">
                                <input type="submit" value="Crear Cuenta" />
                            </p>
                            <p class="change_link">
                                Ya eres miembro ?
                                <a href="#tologin" class="to_register"> Conectate ya! </a>
                            </p>
                        </form>
                    </div>

                </div>
            </div>
        </section>
    </div>
</body>
</html>