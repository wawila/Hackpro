@model WebApplication1.Models.UserModel

@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="UTF-8" />
    <title>#HackPro Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link href="~/Content/TLogIn2/LoginRegistrationForm/css/style.css" rel="stylesheet" />
    <link href="~/Content/TLogIn2/LoginRegistrationForm/css/animate-custom.css" rel="stylesheet" />
    <link href="~/Content/TLogIn2/LoginRegistrationForm/css/demo.css" rel="stylesheet" />
    <link rel="shortcut icon" href="../favicon.ico">
</head>
    <body>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="register" class="animate form">
            <form action="mysuperscript.php" autocomplete="on">
                <h1> Sign up </h1>
                <p>
                    <label for="usernamesignup" class="uname" data-icon="u">Nombre</label>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "required", @placeholder = "Nombre" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </p>
                <p>
                    <label for="usernamesignup" class="uname" data-icon="u">Apellido</label>
                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "required", @placeholder = "Apellido" } })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </p>
                <p>
                    <label for="emailsignup" class="youmail" data-icon="e">Correo</label>
                    @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", @type = "email", @required = "required", @placeholder = "Correo@Direc.com" } })
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                </p>
                <p>
                    <label for="passwordsignup" class="youpasswd" data-icon="p">Contraseña </label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @required = "required", @placeholder = "Constraseña" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </p>
                <p>
                    <label for="passwordsignup_confirm" class="youpasswd" data-icon="p">Confirmar Contraseña </label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "required", @placeholder = "Confirmar Contraseña" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <input id="passwordsignup_confirm" name="passwordsignup_confirm" required="required" type="password" placeholder="eg. X8df!90EO" />
                </p>
                <p class="signin button">
                    <input type="submit" value="Sign up" />
                </p>
                <p class="change_link">
                    Ya Tienes Una Cuenta ?
                    <a href="#tologin" class="to_register"> Go and log in </a>
                </p>
            </form>
        </div>
}
    </body>
    </html>

